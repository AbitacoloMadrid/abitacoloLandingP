      "Me motiva enfrentar nuevos retos que me hagan seguir aprendiendo, resolver problemas complejos y seguir creciendo como profesional en el mundo del desarrollo web.",
    ],
  },
];

const teamMember = team.find(
  (e) =>
    encodeURIComponent(e.person.toLowerCase().replace(/\s+/g, "-")) === member
);

export const prerender = true;

export const getStaticPaths = (() => {
  const names = [
    "Juliette C. Mallen",
    "Manuel Ben",
    "Cristina Allen Casal",
    "Xavier Longo",
    "Guillermo Correa",
  ];
  const generateSlug = (name: string) =>
    encodeURIComponent(name.toLowerCase().replace(/\s+/g, "-"));

  return names.map((name) => ({
    params: { member: generateSlug(name) },
  }));
}) satisfies GetStaticPaths;

if (!teamMember) {
  throw new Error(
    `No se encontró el miembro del equipo con el nombre: ${member}`
  );
}
---

<Layout title={teamMember.person}>
  <div class="flex flex-col min-h-screen">
    <Nav />
    <main role="main" class="flex-grow">
      <div class="member-info p-10 h-full grid place-content-center pt-20">
        <div
          class="flex w-full max-w-[1440px] max-lg:flex-col gap-10 justify-center items-center mt-10"
        >
          <Image
            width={400}
            height={400}
            src={teamMember.linkImage}
            alt={teamMember.person}
            loading="eager"
          />
          <div class="flex flex-col">
            <h1 class="text-4xl text-center font-semibold">
              {teamMember.person}
            </h1>
            <p class="font-semibold text-2xl text-black text-center">
              {teamMember.position}
            </p>
            {
              teamMember.semblanzas.map((text: string) => (
                <p class="text-black text-start p-2 text-xl max-sm:text-lg mt-2">
                  {text}
                </p>
              ))
            }
          </div>
        </div>
      </div>
    </main>
    <Footer />
  </div>
</Layout>
