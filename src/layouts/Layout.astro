---
import "@fontsource-variable/raleway";

interface Props {
  title: string;
}

const { title } = Astro.props;
---

<!doctype html>
<html lang="es" dir="ltr" class="scroll-smooth">
  <head>
    <meta charset="UTF-8" />
    <meta
      name="viewport"
      content="width=device-width, initial-scale=1, shrink-to-fit=no"
    />
    <title>{title}</title>

    <!-- Favicon and Canonical URL -->
    <link rel="icon" type="image/webp" href="/ANegra.webp" />
    <link rel="canonical" href="http://www.abitacolo.info/" />

    <!-- Meta Tags -->
    <meta name="generator" content={Astro.generator} />
    <meta
      name="description"
      content="Abitacolo ofrece muebles en alquiler para eventos, oficinas y hogares. Flexibilidad en tiempos y entrega r치pida."
    />
    <meta name="robots" content="index, follow" />
    <meta name="author" content="Abitacolo.S.L." />
    <meta
      name="keywords"
      content="alquiler de muebles, eventos, oficinas, hogares, mobiliario flexible"
    />

    <!-- Open Graph Tags -->
    <meta
      property="og:title"
      content="Alquiler de Muebles Abitacolo | Calidad y Flexibilidad"
    />
    <meta
      property="og:description"
      content="Muebles en alquiler para hogares, oficinas y eventos. Servicio flexible y con entrega r치pida."
    />
    <meta
      property="og:image"
      content="https://abitacolo-landing-p.vercel.app/_image?href=%2F_astro%2FANegra.BVy9ZUr_.webp&w=89&h=89&f=webp"
    />
    <meta property="og:url" content="http://www.abitacolo.info/" />
    <meta property="og:type" content="website" />

    <!-- Twitter Cards -->
    <meta name="twitter:card" content="summary_large_image" />
    <meta
      name="twitter:title"
      content="Alquiler de Muebles Abitacolo | Flexibilidad y Estilo"
    />
    <meta
      name="twitter:description"
      content="Muebles en alquiler para cualquier ocasi칩n. Calidad y servicio garantizado."
    />
    <meta
      name="twitter:image"
      content="https://abitacolo-landing-p.vercel.app/_image?href=%2F_astro%2FANegra.BVy9ZUr_.webp&w=89&h=89&f=webp"
    />

    <!-- JSON-LD Structured Data -->
    <script type="application/ld+json" is:inline>
      {
        "@context": "https://schema.org",
        "@type": "Organization",
        "name": "Abitacolo",
        "url": "http://www.abitacolo.info/",
        "logo": "https://abitacolo-landing-p.vercel.app/_image?href=%2F_astro%2FANegra.BVy9ZUr_.webp&w=89&h=89&f=webp",
        "description": "Alquiler de muebles para eventos, oficinas y hogares con flexibilidad en tiempos y entrega r치pida.",
        "contactPoint": {
          "@type": "ContactPoint",
          "telephone": "+34-666-696-358",
          "contactType": "Customer Service",
          "email": "info@abitacolo.es"
        },
        "sameAs": [
          "https://www.instagram.com/abitacolomadrid/",
          "https://www.linkedin.com/company/abitacolo"
        ]
      }
    </script>
  </head>
  <body>
    <slot />
  </body>
</html>

<style is:global>
  :root {
    --accent: 136, 58, 234;
    --accent-light: 224, 204, 250;
    --accent-dark: 49, 10, 101;
    --accent-gradient: linear-gradient(
      45deg,
      rgb(var(--accent)),
      rgb(var(--accent-light)) 30%,
      white 60%
    );
  }

  html {
    font-family: "Raleway Variable", sans-serif;
    background: #ffffff;
  }
</style>
