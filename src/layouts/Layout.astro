---
import "@fontsource-variable/raleway";

interface Props {
  title: string;
}

const { title } = Astro.props;
---

<!doctype html>
<html lang="es" dir="ltr" class="scroll-smooth">
  <head>
    <meta charset="UTF-8" />

    <meta
      name="viewport"
      content="width=device-width, initial-scale=1, shrink-to-fit=no"
    />
    <title>{title}</title>

    <!-- Favicon and Canonical URL -->
    <link rel="icon" type="image/webp" href="/ANegra.webp" />
    <link rel="canonical" href="http://www.abitacolo.info/" />

    <!-- Meta Tags -->
    <meta name="generator" content={Astro.generator} />
    <meta
      name="description"
      content="Empresa de diseño regenerativo en mobiliario. Primera plataforma de alquiler asequible de muebles recuperados. ¡Suscríbete a un hogar sostenible!"
    />
    <meta name="robots" content="index, follow" />
    <link rel="sitemap" href="/sitemap-index.xml" />
    <meta name="author" content="ABITACOLO DISEÑO S.L." />
    <meta
      name="keywords"
      content="alquiler de muebles, eventos, recuperados, hogares, mobiliario flexible, madrid"
    />
    <meta name="format-detection" content="telephone=no" />
    <meta name="mobile-web-app-capable" content="yes" />

    <!-- Open Graph Tags -->
    <meta
      property="og:title"
      content="Alquiler de Muebles Abitacolo | Calidad y Flexibilidad"
    />
    <meta
      property="og:description"
      content="Empresa de diseño regenerativo en mobiliario. Primera plataforma de alquiler asequible de muebles recuperados. ¡Suscríbete a un hogar sostenible!"
    />
    <meta
      property="og:image"
      content="https://www.abitacolo.info/_image?href=%2F_astro%2FANegra.BVy9ZUr_.webp&w=89&h=89&f=webp"
    />
    <meta property="og:url" content="http://www.abitacolo.info/" />
    <meta property="og:type" content="website" />

    <!-- Twitter Cards -->
    <meta name="twitter:card" content="summary_large_image" />
    <meta
      name="twitter:title"
      content="Alquiler de Muebles Abitacolo | Flexibilidad y Estilo"
    />
    <meta
      name="twitter:description"
      content="Empresa de diseño regenerativo en mobiliario. Primera plataforma de alquiler asequible de muebles recuperados. ¡Suscríbete a un hogar sostenible!"
    />
    <meta
      name="twitter:image"
      content="https://www.abitacolo.info/_image?href=%2F_astro%2FANegra.BVy9ZUr_.webp&w=89&h=89&f=webp"
    />
    <!-- Google tag (gtag.js) -->
    <script
      type="text/partytown"
      is:inline
      async
      src="https://www.googletagmanager.com/gtag/js?id=G-QQZH201X84"></script>
    <script type="text/partytown" is:inline>
      window.dataLayer = window.dataLayer || [];
      function gtag() {
        dataLayer.push(arguments);
      }
      gtag("js", new Date());

      gtag("config", "G-QQZH201X84");
    </script>

    <!-- JSON-LD Structured Data -->
    <script type="application/ld+json" is:inline>
      {
        "@context": "https://schema.org",
        "@type": "Organization",
        "name": "Abitacolo",
        "url": "http://www.abitacolo.info/",
        "logo": "https://www.abitacolo.info/_image?href=%2F_astro%2FANegra.BVy9ZUr_.webp&w=89&h=89&f=webp",
        "description": "Empresa de diseño regenerativo en mobiliario. Primera plataforma de alquiler asequible de muebles recuperados. ¡Suscríbete a un hogar sostenible!",
        "address": {
          "@type": "PostalAddress",
          "addressLocality": "Madrid",
          "addressCountry": "ES",
          "postalCode": "28005",
          "streetAddress": "Ronda de Segovia 17, 3°G"
        },
        "contactPoint": {
          "@type": "ContactPoint",
          "telephone": "+34-666-696-358",
          "contactType": "Customer Service",
          "email": "info@abitacolo.es",
          "url": "https://www.abitacolo.info/",
          "availableLanguage": "es"
        },
        "sameAs": [
          "https://www.instagram.com/abitacolomadrid/",
          "https://www.linkedin.com/company/abitacolo"
        ]
      }
    </script>
  </head>
  <body class="antialiased min-h-screen">
    <slot />
  </body>
</html>

<style is:global>
  :root {
    --accent: 136, 58, 234;
    --accent-light: 224, 204, 250;
    --accent-dark: 49, 10, 101;
    --accent-gradient: linear-gradient(
      45deg,
      rgb(var(--accent)),
      rgb(var(--accent-light)) 30%,
      white 60%
    );
  }

  html {
    font-family: "Raleway Variable", sans-serif;
    background: #ffffff;
  }
</style>
