---
import rescatamos from "../../image/ourJob/rescatamos.webp";
import restauramos from "../../image/ourJob/restauramos.webp";
import entregamos from "../../image/ourJob/entregamos.webp";

const articles = [
  {
    title: "Rescatamos",
    description:
      "Nos ocupamos de recoger muebles desechados, buscamos esos tesoros que ya no quiere y les damos una segunda vida.",
    image: rescatamos,
  },
  {
    title: "Restauramos",
    description:
      "Nuestro equipo restaura y reinventa cada pieza con pasión, devolviendo la vida a cada una.",
    image: restauramos,
  },
  {
    title: "Entregamos",
    description:
      "Exhibimos nuestras creaciones en nuestra plataforma para que encuentres tu favorita, listas para tu hogar.",
    image: entregamos,
  },
];
---

<section class="w-full grid justify-center bg-[#d9d9d9]">
  <div
    class="min-h-[748px] max-sm:px-2 px-8 max-md:py-8 py-24 flex-col justify-start items-center max-md:gap-8 gap-24 inline-flex max-w-[1376px]"
  >
    <h1
      class="max-w-[796px] text-center text-black/90 md:text-[56px] font-semibold max-md:text-[32px] leading-[64px]"
    >
      ¿Cómo trabajamos?
    </h1>

    <div
      class="justify-start items-start gap-4 min-[1440px]:inline-flex max-[1440px]:grid"
    >
      {
        articles.map((article) => (
          <article
            class="max-w-[448px] h-[400px] px-8 pt-52 pb-12 rounded shadow flex-col justify-start items-start gap-8 inline-flex bg-cover bg-center max-md:max-w-[448px]"
            style={{ backgroundImage: `url(${article.image.src})` }}
          >
            <header class="self-stretch h-[108px] flex-col justify-start items-start gap-4 flex">
              <h2 class="self-stretch text-white text-[28px] leading-loose">
                {article.title}
              </h2>
            </header>
            <p class="self-stretch text-white text-sm uppercase leading-tight">
              {article.description}
            </p>
          </article>
        ))
      }
    </div>
  </div>
</section>
